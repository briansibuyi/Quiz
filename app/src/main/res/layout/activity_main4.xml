<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brian.quiz.Main4Activity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#042f4a">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animal WildLife"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="#b6c297"
                />

            <ImageView
                android:id="@+id/wildlife"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/indexx"
                android:layout_margin="30dp"
                android:scaleType="centerCrop"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cars"
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="#b6c297"
                />

            <ImageView
                android:id="@+id/cars"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:scaleType="centerCrop"
                android:src="@drawable/sls_roadster"
                android:layout_margin="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music "
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="#b6c297"
                />

            <ImageView
                android:id="@+id/music"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:scaleType="centerCrop"
                android:src="@drawable/music"
                android:layout_margin="30dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exit"
                android:text="Back to Main" />

        </LinearLayout>




    </ScrollView>
</RelativeLayout>

